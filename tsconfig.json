{
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": ["jest", "node"], // Добавляем типы для Jest и Node
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"], // если используешь алиасы, можно настроить их здесь
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": ["src"], // Включаем все файлы из папки src
  "exclude": ["node_modules", "dist", "build"]
}
